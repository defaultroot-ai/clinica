    /**
     * Formatează data
     */
    private function format_date($date) {
        if (empty($date)) {
            return '-';
        }
        
        $date_obj = DateTime::createFromFormat('Y-m-d', $date);
        if ($date_obj) {
            return $date_obj->format('d.m.Y');
        }
        
        return $date;
    }
    
    /**
     * Calculează vârsta
     */
    private function calculate_age($birth_date) {
        if (empty($birth_date)) {
            return '-';
        }
        
        $birth = new DateTime($birth_date);
        $today = new DateTime();
        $age = $today->diff($birth);
        
        return $age->y;
    }
    
