                            input.style.display = 'none';
                            container.appendChild(input);
                            el = input;
                            console.log('Input element created:', el);
                            console.log('Input element added to container, container children:', container.children);
                        } else {
                            console.error('=== FP ERROR === Container not found for input creation!');
