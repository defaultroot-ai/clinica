            // Helper: format ISO date (YYYY-MM-DD) to Romanian DD.MM.YYYY
            function formatDateRo(iso){
                if (!iso || typeof iso !== 'string') return iso || '';
                var p = iso.split('-');
                if (p.length === 3) { return p[2] + '.' + p[1] + '.' + p[0]; }
                return iso;
