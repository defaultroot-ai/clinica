        $list = array();
        $current_user = get_userdata($current_user_id);
        $list[] = array('id' => $current_user_id, 'name' => ($current_user ? $current_user->display_name : 'Eu'));

        if (class_exists('Clinica_Family_Manager')) {
            $fm = new Clinica_Family_Manager();
